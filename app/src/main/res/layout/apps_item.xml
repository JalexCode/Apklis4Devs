<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    android:background="@color/cardColor">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >

        <FrameLayout
            android:id="@+id/imageLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/appImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/apklis" />

                <ImageView
                    android:id="@+id/appInRevision"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_verified"
                    app:tint="@color/dayNightColor" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toRightOf="@+id/imageLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageLayout"
            app:layout_constraintVertical_bias="0.1"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/muli_black"
            android:text="@string/loading"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/textColor"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/appTitle"
            app:layout_constraintTop_toBottomOf="@id/appTitle"
            app:layout_constraintBottom_toTopOf="@+id/someInfoLayout"
            style="?android:attr/ratingBarStyleSmall"
            android:progressTint="@color/dayNightColor"
            android:numStars="5"
            android:rating="3"/>

        <LinearLayout
            android:id="@+id/someInfoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@+id/imageLayout"
            app:layout_constraintLeft_toLeftOf="@+id/appTitle">
            <TextView
                android:id="@+id/appDownloadsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Descargas: 0"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColor"/>
            <TextView
                android:id="@+id/appPurchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Compras: 0"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/textColor"/>
        </LinearLayout>
        <TextView
            android:id="@+id/totalMoneyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/someInfoLayout"
            app:layout_constraintVertical_bias="0.1"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/muli_black"
            android:text="0 CUP"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/dayNightColor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>